<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1A8FCC"
    android:gravity="center"
    android:orientation="vertical"

    tools:context=".ly_registrarse">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1A8FCC"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:srcCompat="@mipmap/israred" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="10dp"
                android:text="@string/dt_inicio"
                android:textColor="#C4E5F2"
                android:textSize="20dp" />




            <EditText
                android:id="@+id/etemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#C4E5F2"
                android:ems="10"
                android:hint="@string/dt_email"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textColor="#C4E5F2"
                android:textColorHint="#C4E5F2"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/etpassw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#C4E5F2"
                android:ems="10"
                android:hint="@string/dt_password"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="#C4E5F2"
                android:textColorHint="#C4E5F2"
                android:textSize="14dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1A8FCC"
                android:orientation="horizontal"
                android:padding="25dp">


                <Button
                    android:id="@+id/btncancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_login"
                    android:text="Cancelar"
                    android:textColor="@drawable/txt_btn" />

                <Button
                    android:id="@+id/btnaceptar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_login"
                    android:text="Aceptar"
                    android:textColor="@drawable/txt_btn" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>